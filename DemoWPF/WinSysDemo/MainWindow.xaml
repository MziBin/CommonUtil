<Window x:Class="WinSysDemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WinSysDemo"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Label Content="程序使用内存：" HorizontalAlignment="Left" Margin="116,89,0,0" VerticalAlignment="Top" FontSize="16"/>
        <TextBox HorizontalAlignment="Left" Margin="243,93,0,0" TextWrapping="Wrap" Text="0" x:Name="appMemory"  VerticalAlignment="Top" Width="120" RenderTransformOrigin="1.142,0.798" FontSize="16"/>
        <TextBox HorizontalAlignment="Left" Margin="243,135,0,0" TextWrapping="Wrap" Text="0" x:Name="freeMemory" VerticalAlignment="Top" Width="120" FontSize="16"/>
        <TextBox HorizontalAlignment="Left" Margin="243,181,0,0" TextWrapping="Wrap" Text="0" x:Name="totalMemory" VerticalAlignment="Top" Width="120" FontSize="16"/>
        <TextBox HorizontalAlignment="Left" Margin="243,232,0,0" TextWrapping="Wrap" Text="0" x:Name="CpuUsage" VerticalAlignment="Top" Width="120" FontSize="16"/>
        <Label Content="CPU使用率：" HorizontalAlignment="Left" Margin="137,228,0,0" VerticalAlignment="Top" FontSize="16"/>
        <Label Content="总内存：" HorizontalAlignment="Left" Margin="164,177,0,0" VerticalAlignment="Top" FontSize="16"/>
        <Label Content="可用内存："  HorizontalAlignment="Left" Margin="148,131,0,0" VerticalAlignment="Top" FontSize="16"/>

    </Grid>
</Window>
